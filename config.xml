<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "learnwithme98129.firebaseapp.com"
        version     = "1.0.0" >

    <name>LearnWithMe</name>
    <description>Aplikacja do organizowania wsp√≥lnej nauki</description>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <allow-intent href="*" />
    <allow-navigation href="*" />

    <platform name="android">
        <icon src="www/img/logo.png"/>
    </platform>
    
    <universal-links>
        <host name="gz65b.app.goo.gl" scheme="https" />
        <host name="learnwithme-98129.firebaseapp.com" scheme="https">
            <path url="/__/auth/handler"/>
        </host>
    </universal-links>

    
    <plugin name="cordova-plugin-device" spec="1.1.4" />
    <plugin name="cordova-plugin-buildinfo" spec="2.0.1" />
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <plugin name="cordova-plugin-browsertab" spec="0.2.0" />
    
    
    <preference name="AndroidLaunchMode" value="singleTask" />
    
    <plugin name="cordova-plugin-console" spec="~1.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <plugin name="cordova-plugin-facebook4" spec="~1.7.1">
        <variable name="APP_ID" value="APP_ID" />
        <variable name="APP_NAME" value="APP_NAME" />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />

    <gap:plugin name="cordova-plugin-x-toast" source="npm" />
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    

</widget>